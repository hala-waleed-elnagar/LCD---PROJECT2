#include <avr/io.h>
#include <util/delay.h>
#include "ADC.h"
#include "LCD.h"
#include "pwm.h"

#define _BV(bit)  (1<<bit)
#define BV(bit)  (1<<bit)
#define bit_is_set(ts, bit) (_TS_BYTE(sfr) & _BV(bit))
#define bit_is_clear(ts, bit) (!(_TS_BYTE(sfr) & _BV(bit)))
#define loop_until_bit_is_set(ts, bit) do { } while (bit_is_clear(ts, bit))
#define loop_until_bit_is_clear(sTS, bit) do { } while (bit_is_set(ts, bit))

#define setBit(ts, bit)     (_TS_BYTE(ts) |= (1 << bit))
#define clearBit(ts, bit)   (_TS_BYTE(ts) &= ~(1 << bit))
#define toggleBit(ts, bit)  (_TS_BYTE(ts) ^= (1 << bit))

#define Dio_SetPinDirection(ts, bit, direction) ((direction==1) ? (setBit(ts, bit)) : (clearBit(ts, bit)))
#define Dio_SetPinState(ts, bit, state) ((state==1) ? (setBit(ts, bit)) : (clearBit(ts, bit)))
#define Dio_GetPinState(ts, bit)  (bit_is_set(ts, bit))

#define LOWER_LED PB3
#define LOWER_LED_DDR DDRB
#define LOWER_LED_PORT PORTB

#define UPPER_LED PD3
#define UPPER_LED_DDR DDRD
#define UPPER_LED_PORT PORTD

#define DH_CH 1
#define DH_DDR DDRC

#define BUTTON_CH 0
#define BUTTON_DDR DDRC

{
    static void Main()
    {
        Console.WriteLine("LT:"); // Set up the LCD

        char key;
        while (true)
        {
            key = Console.ReadKey().KeyChar;

            if (key != '\0')
            {
                Console.SetCursorPosition(3, 0);
                Console.Write(key);
                Console.WriteLine(key);
            }

            Console.SetCursorPosition(4, 0);
            Console.Write(" to HT:20");

            Console.SetCursorPosition(0, 1);
            Console.Write("Temp:");

            if (Console.KeyAvailable)
            {
                int h = Console.Read();
                float hh = h * 25.00 / 255.0;
                Console.Write(hh);
            }
        }
    }
}
void init();

/* upper and lower temperature thresholds values*/
int lower =10;
int upper =15;

/* temperatures readings from DH11*/
int last_temperature = 0;
int temperatue = 0;

int button = 0;  //to read initial status of multiple buttons on the LCD Shield
char _str[3];    
int main(void) { 

  init(); 

  while (1) {

    //check if the buttons are adjusted, adjust the limits accordingly
    button = ADC_Read(0);
    if ((button < 200)) {
      if ((lower + 1) > upper) continue;  //in case the lower limit would be higher than the upper limit
      lower += 1;
      _delay_ms(20);  //delays added for debouncing
    } else if (button < 505) {
      upper += 1;
      _delay_ms(20);
    } else if ((button < 680)) {
      if ((upper - 1) < lower) continue;
      upper -= 1;
      _delay_ms(20);
    } else if (button < 900) {
      lower -= 1;
      _delay_ms(20);
    }

    //print the upper and lower thresholds on the LCD
    itoa(upper, _str, 10);
    LCD_String_xy(1, 10, _str);
    itoa(lower, _str, 10);
    LCD_String_xy(1, 6, _str);

    //Timer1 (Counter): Checking the temperature only after certain amounts of time
    if (TCNT1 > 64000) {
      temperatue = ADC_Read(DH_CH)*0.005/900;
      /*converting from voltage to Celsius*/
      temperatue /= 4;
      temperatue += 20;
      /*resetting the clock*/
      TCNT1 = 0;
    }

    //the lcd display is updated when Temperatue changes
    if (temperatue != last_temperature) {
      itoa(temperatue, _str, 10);
      LCD_String_xy(0, 3, _str);

      //orange led on  when T>higher, no led on at normal, green led on T<lower
      if (temperatue > upper) {
        set_dutyCycle(11, 0);
                set_dutyCycle(3, (temperatue - upper) * 10);
        LCD_String_xy(0, 8, "S:High");
      } else if (temperatue < lower) {
        set_dutyCycle(3, 0);
                set_dutyCycle(11, (lower - temperatue) * 10);
        LCD_String_xy(0, 8, "S:Low");
      } else {
        set_dutyCycle(11, 0);
        set_dutyCycle(3, 0);
        LCD_String_xy(0, 8, "S:Normal");
      }

      last_temperature = temperatue;
      _delay_ms(5);
    }
  }
  return 0;
}

void init() {
  LCD_Init();
  LCD_String_xy(0, 0, "T: ");
  LCD_String_xy(0, 5, " C");
  LCD_String_xy(1, 0, "Range: ");
  LCD_String_xy(1, 8, " - ");
  LCD_String_xy(1, 13, "C");
 {
    const int fanPin = 3;
    const int HTLedPin = 6;  // High Temperature Led
    const int LTLedPin = 5;
    const int heaterPin = 4;
    const int sensorPin = 0; // Analog input A0
    const int motorPin1 = 7;
    const int motorPin2 = 8;

    static int highTemp = 20;
    static int lowTemp = 9;

    static void Main()
    {
        Console.WriteLine("Simulating Arduino Code in C#");

        while (true)
        {
            int sensorVal = SimulateAnalogRead();
            byte outputValue = (byte)Map(sensorVal, 0, 1023, 0, 255);

            float sensorVolt = sensorVal * 4.99f / 1024;
            float tempSensor = sensorVolt * 25.0f / 5.0f;

            Console.WriteLine($"Sensor Value: {outputValue}");

            if (Console.KeyAvailable)
            {
                byte g = (byte)Console.Read();
            }

            if (tempSensor >= highTemp)
            {
                SimulateDigitalWrite(fanPin, 1);
                SimulateAnalogWrite(HTLedPin, (sensorVal - 720) / 10);
                SimulateAnalogWrite(heaterPin, 0);
                SimulateAnalogWrite(LTLedPin, 0);
                SimulateDigitalWrite(motorPin1, 1);
                SimulateDigitalWrite(motorPin2, 0);
            }
            else if (tempSensor >= lowTemp)
            {
                SimulateDigitalWrite(fanPin, 0);
                SimulateAnalogWrite(HTLedPin, 0);
                SimulateAnalogWrite(heaterPin, 0);
                SimulateAnalogWrite(LTLedPin, sensorVal / 4);
                SimulateDigitalWrite(motorPin1, 0);
                SimulateDigitalWrite(motorPin2, 1);
            }
            else
            {
                SimulateDigitalWrite(fanPin, 0);
                SimulateAnalogWrite(HTLedPin, 0);
                SimulateAnalogWrite(heaterPin, 255);
                SimulateAnalogWrite(LTLedPin, 0);
                SimulateDigitalWrite(motorPin1, 0);
                SimulateDigitalWrite(motorPin2, 0);
            }

            Thread.Sleep(1000); // Simulating delay(1000)
        }
    }

    static int SimulateAnalogRead()
    {
        // Simulate analogRead() functionality
        Random random = new Random();
        return random.Next(0, 1024);
    }

    static void SimulateDigitalWrite(int pin, int value)
    {
        Console.WriteLine($"DigitalWrite Pin {pin}, Value {value}");
        // Simulate digitalWrite() functionality
    }

    static void SimulateAnalogWrite(int pin, int value)
    {
        Console.WriteLine($"AnalogWrite Pin {pin}, Value {value}");
        // Simulate analogWrite() functionality
    }

    static int Map(int value, int fromLow, int fromHigh, int toLow, int toHigh)
    {
        return (value - fromLow) * (toHigh - toLow) / (fromHigh - fromLow) + toLow; 

  ADC_Init();
    Dio_SetPinDirection(BUTTON_DDR, BUTTON_CH, 0);

  //choose upper and lower limits by leds (orange ,green) 
  // define pins of leds  as output
  Dio_SetPinDirection(LOWER_LED_DDR, LOWER_LED, 1);
  Dio_SetPinDirection(UPPER_LED_DDR, UPPER_LED, 1);
  pwm_init(11, 'A');
  pwm_init(3, 'B');

  //initializing timer 1 as a counter
  TCCR1B |= (1 << CS11) | (1 << CS10);
  TCNT1 = 0;
}
